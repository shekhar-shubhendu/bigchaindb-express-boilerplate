{
  "name": "bigchaindb-template",
  "version": "1.0.0",
  "description": "Base template for all BigchainDB based PoCs and Projects",
  "main": "index.js",
  "scripts": {
    "build": "./node_modules/.bin/babel src --out-dir dist --source-maps inline --copy-files",
    "dev": "babel-watch -w src",
    "serve": "npm run build && node dist/index.js",
    "test": "npm run build && mocha dist/**/*.spec.js",
    "lint": "eslint src --ext js --fix"
  },
  "keywords": [
    "bigchaindb",
    "template",
    "orm",
    "es6",
    "rest",
    "express"
  ],
  "author": "Shubhendu Shekhar",
  "license": "Apache-2.0",
  "dependencies": {
    "bigchaindb-orm": "2.0.0",
    "body-parser": "1.18.3",
    "express": "4.16.3"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.5",
    "babel-preset-env": "^1.7.0",
    "babel-watch": "^2.0.7",
    "eslint": "4.19.1",
    "eslint-config-airbnb-base": "13.0.0",
    "eslint-plugin-import": "2.13.0",
    "eslint-plugin-promise": "3.8.0",
    "mocha": "5.2.0",
    "supertest": "3.1.0"
  }
}
